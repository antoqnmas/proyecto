Algoritmo CalcularSegundosEn5Dias
	// Declarar variables
    Definir dias, horas, minutos, segundos Como Entero
	
    // Inicializar los días
    dias <- 5
	
    // Calcular el número de horas, minutos y segundos
    horas <- dias * 24
    minutos <- horas * 60
    segundos <- minutos * 60
	
    // Mostrar el resultado
    Escribir "En ", dias, " días hay ", segundos, " segundos."

	
FinAlgoritmo
